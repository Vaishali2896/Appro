<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivanigupta.apppro.Ques1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUESTION-1"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#c02e2e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which of the following is my favorite song?"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="25dp"
        android:textColor="#1b555c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nx1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raabta"
            android:id="@+id/radioButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:textSize="20dp"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pehli Nazar Me"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:textSize="20dp"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeene Laga Hu"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:textSize="20dp"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Love You"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textSize="20dp"
            android:textAlignment="center" />
    </RadioGroup>

</RelativeLayout>
